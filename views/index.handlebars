<h1>BURGERS!</h1>

<h2>MAKING A BURGER!</h2>

<ul>
  {{#each burgers}}
      {{#if devoured=false}}   
      {{burger_name}}
  {{/each}}
</ul>

<h2>DEVOURED BURGER!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}   
      {{burger_name}}
    {{/if}}
  {{/each}}
</ul>
{{!-- //if they are not devoured they they need to it the button  --}}

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bname">Burger Name:</label>
    <input type="text" id="bname" name="burger-name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" pending> Burger Devoured!<br>
    <input type="radio" name="devoured" value="0"> eaten

  </div>

  <button type="submit">Add Burger</button>
</form>
